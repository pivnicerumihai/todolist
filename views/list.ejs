    <%- include ("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle %> To-Do List</h1>
    </div>
    <div class="box">

        <% todo.forEach(function(element,index){ %>
            <form method="Post" action="/delete" >
        <div name="item" class="item">
            <input name="checkbox" type="checkbox" value="<%=element._id %>" onChange="this.form.submit()">
        
            <p> <%= element.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>
        <%}) %>

    </div>

    <div >
    <form  cclass="item" method="POST" action="/">
        <input type="text" name="todo" placeholder="New To Do Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

